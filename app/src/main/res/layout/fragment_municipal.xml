<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="la.opi.verificacionciudadana.activities.TownActivity.MunicipalFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/title_main"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:text="@string/sub_state"
        android:textColor="@color/white"
        android:textSize="20sp"
      />



        <Spinner
            android:id="@+id/spinner_state"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:text="Municipio"
        android:textColor="@color/white"
        android:textSize="20sp"
      />



        <Spinner
            android:id="@+id/spinner_municipal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />




    <Button
        android:id="@+id/save"
        style="@style/Widget.Button.Standar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="56dp"
        android:layout_marginRight="56dp"
        android:layout_marginTop="32dp"
        android:padding="10dp"
        android:text="@string/sub_btn" />


</LinearLayout>
