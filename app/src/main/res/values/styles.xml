<resources>


    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:navigationBarColor">@color/primary</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/primary</item>
        <item name="colorControlHighlight">@color/color_control_app</item>


    </style>


    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/color_control_app</item>
    </style>


    <style name="AppThemeEvidence" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>


    <!--&lt;!&ndash; ToolBar &ndash;&gt;-->
    <!--<style name="Erik.Toolbar.Transparent" parent="ThemeOverlay.AppCompat.Dark.ActionBar">-->
    <!--<item name="android:windowActionBarOverlay">true</item>-->
    <!--&lt;!&ndash; Support Library compability &ndash;&gt;-->
    <!--<item name="windowActionBarOverlay">true</item>-->
    <!--</style>-->

    <!-- ToolBar -->
    <style name="Erik.Toolbar.Transparent" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <!-- Support Library compability -->
        <item name="windowActionBarOverlay">true</item>
    </style>


    <!--Login Activity-->

    <style name="Widget.TextView.Login" parent="android:Widget">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="Widget.Button.Login" parent="android:Widget">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:background">@drawable/button_login</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>

    </style>


    <style name="Widget.Button.Evidence" parent="android:Widget">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:background">@drawable/button_evidence</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="Widget.Button.Standar" parent="android:Widget">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:background">@drawable/button_map</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="Widget.Button.Standar.Custom" parent="android:Widget">
    <item name="android:gravity">center_vertical|center_horizontal</item>
    <item name="android:background">@drawable/button_standar_custom</item>
    <item name="android:textAppearance">?android:textAppearanceMedium</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.Button.Standar.Custom.Two" parent="android:Widget">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:background">@drawable/button_standar_custom</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="Widget.Button.Standar.Other" parent="android:Widget">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:background">@drawable/button_standar_other</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.Button.Application" parent="android:Widget">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:background">@drawable/button_save_preferences</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.EditText.Login" parent="android:Widget">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textColorHint">@color/secondary_text</item>

    </style>


    <style name="myCustomMenuTextApearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/font_color_app</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="Widget.EditText.Comment" parent="android:Widget">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textColorHint">@color/secondary_text</item>
        <item name="colorControlNormal">@color/primary</item>
        <item name="colorControlActivated">@color/orange</item>
        <item name="colorControlHighlight">@color/color_control_app</item>

    </style>

    <style name="ActionBarThemeOverlay" parent="">
        <item name="android:textColorPrimary">@color/secondary_text</item>
        <item name="colorControlNormal">@color/secondary_text</item>
        <item name="colorControlHighlight">@color/secondary_text</item>
    </style>

    <style name="Widget.MyTheme.HeaderBar.Spinner" parent="Theme.AppCompat.Light">
        <item name="android:theme">@style/ActionBarThemeOverlay</item>
    </style>

</resources>